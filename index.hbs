<DOCTYPE html>
  <html>
    <head>
      {{{styles}}}
      <link href='http://fonts.googleapis.com/css?family=Ropa+Sans' rel='stylesheet' type='text/css'>
      <script src="//use.typekit.net/xvi6pll.js"></script>
      <script>try{Typekit.load();}catch(e){}</script>
    </head>
    <body {{{bodyClasses}}}>
      <div class="wrapper">
        <div class="content-wrapper">
          <div class="content">
            <div class="dear">Senator {{#if variants}}{{senator_last}}{{else}}SENATOR NAME{{/if}},</div>
            <div class="city-state">
              {{#if city}}
                {{{city}}}
                {{#if state}}
                  {{#if city}}
                    ,
                  {{/if}}
                {{/if}}
                {{#if city}}
                  {{state}}
                {{else}}
                  {{state_full}}
                {{/if}}
              {{else}}
                Virginia
              {{/if}}
            </div>
            <div class="user-info">
              <div class="avatar">
                {{#if avatar}}
                  <div class="avatar-wrapper">
                    <span class="avatar-image" style="background-image: url({{{avatar}}})"></span>
                  </div>
                {{/if}}
              </div>
              <div class="signature">
                <div class="signature-name">{{first}} {{last}}</div>
                <div class="signature-city-state">
                  {{{city}}}
                  {{#if state}}
                    {{#if city}}
                      ,
                    {{/if}}
                  {{/if}}
                  {{#if city}}
                    {{state}}
                  {{else}}
                    {{state_full}}
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="senator-image">
          <div class="senator-image-wrapper">
            {{#if variants}}
              <img src="{{{senator_image}}}" alt="{{senator_last}}">
            {{/if}}
          </div>
        </div>
      </div>
      {{{scripts}}}
    </body>
  </html>