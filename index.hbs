<DOCTYPE html>
  <html>
    <head>
      {{{styles}}}
      <link href='http://fonts.googleapis.com/css?family=Ropa+Sans' rel='stylesheet' type='text/css'>
      <script src="//use.typekit.net/xvi6pll.js"></script>
      <script>try{Typekit.load();}catch(e){}</script>
    </head>
    <body {{{bodyClasses}}}>
      <div class="wrapper">
        <div class="content-wrapper">
          <div class="content">
            <div class="dear"></div>
            <div class="city-state"></div>
            <div class="user-info">
              <div class="avatar">
                {{#if avatar}}
                  <div class="avatar-wrapper">
                    <span class="avatar-image" style="background: url({{{avatar}}})"></span>
                  </div>
                {{/if}}
              </div>
              <div class="signature">
                <div class="signature-name">{{first}} {{last}}</div>
                <div class="signature-city-state">
                  {{{city}}}
                  {{#if state}}
                    {{#if city}}
                      ,
                    {{/if}}
                  {{/if}}
                  {{#if city}}
                    {{state}}
                  {{else}}
                    {{state_full}}
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="senator-image">
          <div class="senator-image-wrapper">
            <img src="{{base_url}}/images/{{senator_name}}.jpg" alt="{{senator_name}}">
          </div>
        </div>
      </div>
      {{{scripts}}}
    </body>
  </html>